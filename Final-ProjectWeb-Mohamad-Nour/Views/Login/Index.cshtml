
@{
    ViewBag.Title = "Index";
}

<div class="text-center">
    <h1>Hello  Administrators!</h1>


</div>
<h2>Login</h2>

<div class="alert-warning">@ViewBag.Error</div>

@if (ViewBag.ReturnUrl != null)
{
    Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl });
}
else
{
    Html.BeginForm("Index", "Login");
}

<div class="form-group">
    @Html.Label("Username")
    @Html.TextBox("Username", null, new { @class = "form-control" })
</div>

<div class="form-group">
    @Html.Label("Password")
    @Html.Password("Password", null, new { @class = "form-control" })
</div>

<div class="checkbox">
    <label>@Html.CheckBox("RememberMe") Remember Me</label>
</div>
<input type="submit" name="login" value="Login" class="btn btn-success" />
<div class="text-center">

    <img src="~/Images/computer.jpg" width="940" height="270" class="right">

</div>





@{Html.EndForm();}